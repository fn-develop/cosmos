<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark"><%= t('common.line_richmenu_image') %></h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item">
            <a href="<%= homes_path %>">
              <%= t('common.home') %>
            </a>
          </li>
          <li class="breadcrumb-item">
            <a href="<%= company_setting_path(@company.code) %>">
              <%= t('common.company_setting') %>
            </a>
          </li>
          <li class="breadcrumb-item active">
            <%= t('common.line_richmenu_image') %>
          </li>
        </ol>
      </div>
    </div>
  </div>
</div>

<section class="content">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">
        メモ：<%= @line_richmenu_image.memo.to_s %>
      </h3>
    </div>

    <div class="card-body">
      <img src="<%= @line_richmenu_image.encode_base64_image_file %>" />
    </div>

    <div class="card-footer clearfix">
      <a href="<%= edit_company_line_richmenu_image_path(@company.code, @line_richmenu_image) %>" class="btn btn-info float-left mr-2"><%= t('common.edit_link') %></a>
    </div>
  </div>
</section>

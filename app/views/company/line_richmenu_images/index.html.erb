<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark"><%= t('common.line_richmenu_image') %></h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item">
            <a href="<%= homes_path %>"><%= t('common.home') %></a>
          </li>
          <li class="breadcrumb-item">
            <a href="<%= company_setting_path(@company.code) %>"><%= t('common.company_setting') %></a>
          </li>
          <li class="breadcrumb-item active">
            <%= t('common.line_richmenu_image') %>
          </li>
        </ol>
      </div>
    </div>
  </div>
</div>

<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="card card-primary card-outline col-12">
        <div class="card-header">
          <h3 class="card-title">
            画像一覧
          </h3>
        </div>

        <div class="card-body p-0">
          <div class="mailbox-controls">
            <a href="<%= new_company_line_richmenu_image_path %>" class="btn btn-sm float-right"><i class="far fa-plus-square fa-2x text-primary"></i></a>
          </div>
        </div>

        <% @line_richmenu_images.each do |lri| %>
          <div class="col-12 col-sm-6 col-md-12">
            <div class="info-box">
              <a href="<%= company_line_richmenu_image_path(@company.code, lri) %>">
                <img src="<%= lri.base64_image(:thumb_240) %>" />
              </a>

              <div class="info-box-content">
                <span class="info-box-text">
                  <%= lri.memo.to_s %>
                </span>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="clearfix hidden-md-up"></div>
    </div>
  </div>
</section>

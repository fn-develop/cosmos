<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title">店舗情報を入力してください。 <small></small></h3>
          </div>

          <%= form_with(model: company, url: url, local: true) do |form| %>
            <div class="card-body">
              <div class="form-group">
                <%= form.label :code %>
                <%= form.text_field :code, { class: "form-control" , placeholder: '店舗コード', maxlength: 100, readonly: true } %>
                <small>*店舗コードは変更できません。</small>

              </div>

              <div class="form-group">
                <% name_err = true if company.errors.include?(:name) %>
                <%= form.label :name %>
                <%= form.text_field :name, { class: "form-control #{ name_err ? 'is-invalid' : '' }", placeholder: '店舗名', maxlength: 100 } %>
                <% if name_err %>
                  <span class="error invalid-feedback"><%= company.errors.full_messages_for(:name).first %></span>
                <% end %>
              </div>

              <div class="form-group">
                <% logo_err = true if company.errors.include?(:logo) %>
                <%= form.label :logo %>

                <div class="input-group">
                  <div class="custom-file <%= logo_err ? 'is-invalid' : '' %>">
                    <%= form.file_field :logo, { class: "custom-file-input #{ logo_err ? 'is-invalid' : '' }", accept: 'image/jpeg,image/gif,image/png' } %>
                    <%= form.label :logo, { id: 'company_logo-label', class: 'custom-file-label', 'data-browse': '参照' }  do %>
                      ロゴファイルを選択(ここにドロップすることもできます)
                    <% end %>
                  </div>

                  <div class="input-group-append">
                    <button type="button" class="btn btn-outline-secondary company_logo-reset">取消</button>
                  </div>

                  <% if logo_err %>
                    <span class="error invalid-feedback"><%= company.errors.full_messages_for(:logo).first %></span>
                  <% end %>
                </div>
              </div>

              <%= javascript_tag do %>
                $(function() {
                  $('.custom-file-input').on('change',function(){
                    $(this).next('.custom-file-label').html($(this)[0].files[0].name);
                  })
                  // ファイルの取消
                  $('.company_logo-reset').click(function(){
                    $('#company_logo-label').html('ロゴファイルを選択(ここにドロップすることもできます)');
                    $('#company_logo').val('');
                  })
                });
              <% end %>

            </div>

            <div class="card-footer">
              <%= form.submit class: 'btn btn-primary', data: { confirm: 'よろしいですか?' } %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="col-md-6">
      </div>
    </div>
  </div>
</section>

<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark"></h1>
      </div>

      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="<%= homes_path %>">ホーム</a></li>
          <li class="breadcrumb-item"><a href="<%= company_items_path %>"></a></li>
          <li class="breadcrumb-item active"></li>
        </ol>
      </div>
    </div>
  </div>
</div>

<section class="content">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">情報</h3>
    </div>

    <div class="card-body">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="text-nowrap"><%= Item.human_attribute_name(:code) %></th>
            <td><%= @item.code.to_s %></td>
          </tr>
          <tr>
            <th class="text-nowrap"><%= Item.human_attribute_name(:name) %></th>
            <td><%= @item.name.to_s %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="card-footer clearfix">
      <% if can? :manage, :setting %>
        <a href="<%= edit_company_item_path(@company.code, @item) %>" class="btn btn-info float-left mr-2">　編集　</a>
      <% end %>
      <a href="<%= company_items_path %>" class="btn btn-default float-right">　戻る　</a>
    </div>
  </div>
</section>

<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark"><%= Const::View::Name::COMPANY_ITEMS_INDEX %></h1>
      </div>

      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="<%= homes_path %>">ホーム</a></li>
          <li class="breadcrumb-item active"><%= Const::View::Name::COMPANY_ITEMS_INDEX %></li>
        </ol>
      </div>
    </div>
  </div>
</div>

<section class="content">

  <div class="card">
    <div class="card-header">
      <a href="<%= new_company_item_path %>" class="btn btn-info float-left mt-1">新規作成</a>
    </div>
    <div class="card-body">

      <table class="table table-bordered">
        <thead>
          <tr>
            <th style="width: 10px"><%= Item.human_attribute_name(:id) %></th>
            <th style="width: 10%"><%= Item.human_attribute_name(:code) %></th>
            <th><%= Item.human_attribute_name(:name) %></th>
            <th style="width: 100px">編集</th>
          </tr>
        </thead>
        <tbody>

          <% @items.each_with_index do |item, i| %>
            <tr>
              <td><a href="#"><%= item.id.to_s %>.</a></td>
              <td><%= item.code.to_s %></td>
              <td><%= item.name.to_s %></td>
              <td><a href="<%= edit_company_item_path(@company.code ,item) %>" class="btn btn-block btn-info float-left mt-1">編集</a></td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div>
  </div>
</section>

<div class="col-md-6">
  <div class="card card-success">

    <%= form_with(model: line_message, url: send_line_message_customer_path(customer, company_code: @company.code),local: true) do |form| %>
      <%= form.hidden_field :user_id %>
      <div class="card-body">
        <div class="form-group">
          <%= form.label :message %>
          <%= form.text_area :message, { class: 'form-control', placeholder: 'メッセージを入力してください。', maxlength: 240, rows: 4 } %>
        </div>
      </div>

      <div class="card-footer">
        <button type="submit" class="btn btn-success">送信</button>
      </div>
    <% end %>

  </div>
</div>

<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title">登録情報を入力してください。 <small></small></h3>
          </div>

          <%= form_with(model: customer, url: url, local: true) do |form| %>
            <div class="card-body">

              <div class="form-group">
                <% name_err = true if customer.errors.include?(:name) %>
                <%= form.label :name %>
                <%= form.text_field :name, { class: "form-control #{ name_err ? 'is-invalid' : '' }", placeholder: '名前' } %>
                <% if name_err %>
                  <span class="error invalid-feedback"><%= customer.errors.full_messages_for(:name).first %></span>
                <% end %>
              </div>

              <div class="form-group">
                <% name_kana_err = true if customer.errors.include?(:name_kana) %>
                <%= form.label :name_kana %>
                <%= form.text_field :name_kana, { class: "form-control #{ name_kana_err ? 'is-invalid' : '' }", placeholder: '名前（カナ）' } %>
                <% if name_kana_err %>
                  <span class="error invalid-feedback"><%= customer.errors.full_messages_for(:name_kana).first %></span>
                <% end %>
              </div>

              <div class="form-group">
                <% gender_err = true if customer.errors.include?(:gender) %>

                <%= form.label :gender , { class: "#{ gender_err ? 'is-invalid' : '' }" } %><br />

                <div class="form-check form-check-inline">
                  <%= form.radio_button :gender, :men, class: 'form-check-input', checked: "#{ 'checked' if form.object.men? }" %>
                  <%= form.label :gender, Customer.human_attribute_name("gender.men"), value: :men, class: 'form-check-label' %>
                </div>

                <div class="form-check form-check-inline">
                  <%= form.radio_button :gender, :women, class: 'form-check-input', checked: "#{ 'checked' if form.object.women? }" %>
                  <%= form.label :gender, Customer.human_attribute_name("gender.women"), value: :women, class: 'form-check-label' %>
                </div>
                <% if gender_err %>
                  <span class="error invalid-feedback"><%= customer.errors.full_messages_for(:gender).first %></span>
                <% end %>
              </div>

              <div class="form-group">
                <% tel_number_err = true if customer.errors.include?(:tel_number) %>
                <%= form.label :tel_number, { class: "#{ tel_number_err ? 'is-invalid' : '' }" } %>
                <div class="form-row align-items-center">
                  <div class="col">
                    <%= form.text_field :tel_number1, { maxlength:3, class: "form-control #{ tel_number_err ? 'is-invalid' : '' }" } %>
                  </div>
                  <div class="col">
                    <%= form.text_field :tel_number2, { maxlength:4, class: "form-control #{ tel_number_err ? 'is-invalid' : '' }" } %>
                  </div>
                  <div class="col">
                    <%= form.text_field :tel_number3, { maxlength:4, class: "form-control #{ tel_number_err ? 'is-invalid' : '' }" } %>
                  </div>
                </div>
                <span class="error invalid-feedback"><%= customer.errors.full_messages_for(:tel_number).first %></span>
              </div>

              <div class="form-group">
                <%= form.label :birthday %>
                <div >
                <%= raw sprintf(form.date_select(
                                  :birthday,
                                  {
                                    with_css_classes: true,
                                    use_month_numbers: true,
                                    start_year: 1940,
                                    end_year: (Time.now.year),
                                    default: Date.today - 20.years,
                                    date_separator: '%s',
                                    class: 'form-control',
                                  }),
                                '年 ', '月 ') + '日'
                %>
                </div>
              </div>

              <div class="form-group">
                <% postal_code_err = true if customer.errors.include?(:postal_code) %>
                <%= form.label :postal_code %>
                <%= form.text_field :postal_code, { class: "form-control #{ postal_code_err ? 'is-invalid' : '' }" } %>
                <% if postal_code_err %>
                  <span class="error invalid-feedback"><%= customer.errors.full_messages_for(:postal_code).first %></span>
                <% end %>
              </div>

              <div class="form-group">
                <%= form.label :prefecture %>
                <%= form.text_field :prefecture, { class: 'form-control' } %>
              </div>

              <div class="form-group">
                <%= form.label :city %>
                <%= form.text_field :city, { class: 'form-control' } %>
              </div>

              <div class="form-group">
                <%= form.label :address1 %>
                <%= form.text_field :address1, { class: 'form-control' } %>
              </div>

              <div class="form-group">
                <%= form.label :address2 %>
                <%= form.text_field :address2, { class: 'form-control' } %>
              </div>
            </div>

            <div class="card-footer">
              <%= form.submit class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="col-md-6">
      </div>
    </div>
  </div>
</section>

<% content_for :page_javascript do %>
  <%= javascript_tag do %>
    $(function() {
      $('.year, .month, .day').addClass('form-control d-inline col-3');
    });
  <% end %>
<% end %>

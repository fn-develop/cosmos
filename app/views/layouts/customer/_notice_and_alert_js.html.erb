<%= javascript_tag do %>
  $(function() {
    const Toast = Swal.mixin({
      toast: true,
      position: 'top-end',
      showConfirmButton: false,
      timer: 5000
    });

    <% if notice %>
      Toast.fire({
        icon: 'warning',
        title: '<%= notice %>',
      });
    <% end %>

    <% if alert %>
      Toast.fire({
        icon: 'error',
        title: '<%= alert %>',
      });
    <% end %>
  });
<% end %>
